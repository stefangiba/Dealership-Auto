@model IEnumerable<Dealership_Auto.Models.Angajat>

@{
    ViewData["Title"] = "ListareAngajatii";
}

<h1>Listare Angajati</h1>

<p>
    <a asp-action="CreateAngajat">Adaugare angajat</a>
</p>

<p>
    <span style="float: left">
        @using (Html.BeginForm("ListareAngajatii", "Angajat", FormMethod.Get))
        {
            <b>Cauta angajatii care au minim</b> <br />
            @Html.TextBox("searchNumber")<br />
            <b>tranzactii cu clienti ce au numele de familie</b><br />
            @Html.TextBox("searchNume")
            <input type="submit" value="Cauta" />
        }
    </span>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prenume)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Adresa)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefon)
                </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nume)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prenume)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Adresa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefon)
                    </td>*@
                <td>
                    @Html.ActionLink("Editare", "EditAngajat", "Angajat", new { id = item.AngajatID }) |
                    @Html.ActionLink("Detalii", "DetailsAngajat", "Angajat", new { id = item.AngajatID }) |
                    @Html.ActionLink("Stergere", "DeleteAngajat", "Angajat", new { id = item.AngajatID })
                </td>
            </tr>
        }
    </tbody>
</table>
