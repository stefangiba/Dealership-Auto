 @model IEnumerable<Dealership_Auto.Models.Client>

@{
    ViewData["Title"] = "ListareClienti";
}

<h1>Listare Clienti</h1>

<p>
    <a asp-action="CreateClient">Creare client</a>
</p>

<p>
    <span style="float: left">
        @using (Html.BeginForm("ListareClientii", "Client", FormMethod.Get))
        {
            <b>Cauta clientii care au minim</b> <br />
            @Html.TextBox("searchNumber")<br />
            <b>tranzactii cu autoturisme produse de</b><br />
            @Html.TextBox("searchProducator")
            <input type="submit" value="Cauta" />
        }
    </span>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClientID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prenume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefon)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClientID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                @Html.ActionLink("Editare", "EditClient", "Client", new { id=item.ClientID }) |
                @Html.ActionLink("Detalii", "DetailsClient", "Client", new { id=item.ClientID }) |
                @Html.ActionLink("Stergere", "DeleteClient", "Client", new { id=item.ClientID })
            </td>
        </tr>
}
    </tbody>
</table>
